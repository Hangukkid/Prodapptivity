<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageButton
        android:id="@+id/subject_select_end_day"
        android:layout_width="47dp"
        android:layout_height="39dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/subject_select_start_day"
        android:layout_marginBottom="119dp" />

    <ImageButton
        android:id="@+id/subject_select_start_day"
        android:layout_width="47dp"
        android:layout_height="39dp"
        android:layout_alignTop="@+id/subject_start_date"
        android:layout_toStartOf="@+id/subject_add_btn" />

    <TextView
        android:id="@+id/subject_end_date"
        android:layout_width="182dp"
        android:layout_height="47dp"
        android:layout_alignBottom="@+id/subject_select_end_day"
        android:layout_alignStart="@+id/subject_start_date"
        android:ems="10"
        android:hint="end"
        android:inputType="none"
        android:text="End" />

    <EditText
        android:id="@+id/subject_name_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/subject_end_date"
        android:layout_marginTop="30dp"
        android:ems="10"
        android:hint="Name"
        android:inputType="textCapSentences|textPersonName" />

    <Spinner
        android:id="@+id/colour_pick_spinner"
        android:layout_width="385dp"
        android:layout_height="35dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/subject_select_end_day"
        android:layout_marginStart="-249dp"
        android:layout_marginTop="226dp" />

    <Button
        android:id="@+id/subject_add_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:text="Add" />

    <Button
        android:id="@+id/subject_show_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:text="Show" />

    <SeekBar
        android:id="@+id/subject_priority"
        style="@style/Widget.AppCompat.SeekBar.Discrete"
        android:layout_width="345dp"
        android:layout_height="42dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="135dp"
        android:max="4"
        android:progress="2" />

    <TextView
        android:id="@+id/subject_priority_title"
        android:layout_width="92dp"
        android:layout_height="35dp"
        android:layout_above="@+id/subject_priority"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="-135dp"
        android:layout_marginStart="132dp"
        android:text="Priority"
        android:textSize="18sp"
        app:fontFamily="monospace" />

    <TextView
        android:id="@+id/medium_priority"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/subject_priority"
        android:layout_centerHorizontal="true"
        android:text="Average"
        android:textColor="@android:color/holo_purple" />

    <TextView
        android:id="@+id/high_priority2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/subject_priority"
        android:layout_marginEnd="12dp"
        android:text="Very High"
        android:textColor="@android:color/holo_red_dark" />

    <TextView
        android:id="@+id/low_priority"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/subject_priority"
        android:layout_marginStart="12dp"
        android:text="Very Low"
        android:textColor="@android:color/holo_blue_dark" />

    <TextView
        android:id="@+id/subject_start_date"
        android:layout_width="184dp"
        android:layout_height="36dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="183dp"
        android:layout_marginStart="30dp"
        android:text="Start" />
</RelativeLayout>