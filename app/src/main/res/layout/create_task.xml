<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Create_Task">

    <TextView
        android:id="@+id/task_end_date"
        android:layout_width="184dp"
        android:layout_height="32dp"
        android:layout_alignEnd="@+id/task_name_txt"
        android:layout_alignTop="@+id/task_select_end_day"
        android:text="End" />

    <ImageButton
        android:id="@+id/task_select_end_day"
        android:layout_width="47dp"
        android:layout_height="39dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/task_select_start_day"
        android:layout_marginBottom="213dp" />

    <EditText
        android:id="@+id/task_name_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="56dp"
        android:ems="10"
        android:hint="Name"
        android:inputType="textPersonName" />

    <Spinner
        android:id="@+id/subject_pick_spinner"
        android:layout_width="156dp"
        android:layout_height="35dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/task_name_txt" />

    <Button
        android:id="@+id/task_add_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="19dp"
        android:layout_marginEnd="12dp"
        android:text="Add" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/something"
        android:layout_width="209dp"
        android:layout_height="76dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="144dp"
        android:layout_toStartOf="@+id/subject_pick_spinner">

        <EditText
            android:id="@+id/task_description_txt"
            android:layout_width="wrap_content"
            android:layout_height="107dp"
            android:layout_weight="1"
            android:ems="10"
            android:hint="description"
            android:inputType="textMultiLine" />
    </android.support.design.widget.TextInputLayout>

    <ImageButton
        android:id="@+id/task_select_start_day"
        android:layout_width="47dp"
        android:layout_height="39dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/task_start_date"
        android:layout_marginEnd="78dp" />

    <TextView
        android:id="@+id/task_start_date"
        android:layout_width="184dp"
        android:layout_height="32dp"
        android:layout_alignEnd="@+id/task_name_txt"
        android:layout_alignParentTop="true"
        android:layout_marginTop="254dp"
        android:text="Start" />

</RelativeLayout>