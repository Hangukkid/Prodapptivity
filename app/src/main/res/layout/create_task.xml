<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Create_Task">

    <SeekBar
        android:id="@+id/task_priority"
        style="@style/Widget.AppCompat.SeekBar.Discrete"
        android:layout_width="345dp"
        android:layout_height="42dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="221dp"
        android:max="2"
        android:progress="1" />

    <TextView
        android:id="@+id/task_priority_title"
        android:layout_width="92dp"
        android:layout_height="35dp"
        android:layout_centerInParent="true"
        android:text="Priority"
        android:textSize="18sp"
        app:fontFamily="monospace" />

    <TextView
        android:id="@+id/medium_priority2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/high_priority"
        android:layout_centerHorizontal="true"
        android:text="Average"
        android:textColor="@android:color/holo_purple" />

    <TextView
        android:id="@+id/high_priority"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/task_add_btn"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="192dp"
        android:text="Very High"
        android:textColor="@android:color/holo_red_dark" />

    <TextView
        android:id="@+id/low_priority2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/medium_priority2"
        android:layout_marginStart="12dp"
        android:text="Very Low"
        android:textColor="@android:color/holo_blue_dark" />

    <TextView
        android:id="@+id/task_end_date"
        android:layout_width="184dp"
        android:layout_height="32dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="96dp"
        android:layout_marginStart="27dp"
        android:text="End" />

    <ImageButton
        android:id="@+id/task_select_end_day"
        android:layout_width="47dp"
        android:layout_height="39dp"
        android:layout_alignStart="@+id/task_select_start_day"
        android:layout_alignTop="@+id/task_end_date" />

    <EditText
        android:id="@+id/task_name_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/something"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:hint="Name"
        android:inputType="textCapSentences|textPersonName" />

    <Spinner
        android:id="@+id/subject_pick_spinner"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="89dp" />

    <Button
        android:id="@+id/task_add_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="19dp"
        android:layout_marginEnd="12dp"
        android:text="Add" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/something"
        android:layout_width="365dp"
        android:layout_height="76dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="19dp"
        android:layout_marginTop="148dp">

        <EditText
            android:id="@+id/task_description_txt"
            android:layout_width="wrap_content"
            android:layout_height="107dp"
            android:layout_weight="1"
            android:ems="10"
            android:hint="description"
            android:inputType="textCapSentences|textMultiLine"
            android:textSize="14sp" />
    </android.support.design.widget.TextInputLayout>

    <ImageButton
        android:id="@+id/task_select_start_day"
        android:layout_width="47dp"
        android:layout_height="39dp"
        android:layout_above="@+id/task_end_date"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="86dp" />

    <TextView
        android:id="@+id/task_start_date"
        android:layout_width="184dp"
        android:layout_height="32dp"
        android:layout_above="@+id/task_end_date"
        android:layout_alignStart="@+id/task_end_date"
        android:text="Start" />

</RelativeLayout>